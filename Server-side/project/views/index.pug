extends ./layout.pug

//- optional (PACE loader)
block pace-loader
  link(rel='stylesheet', href='/css/pace.css')
  script(type='text/javascript', src='/bower_components/PACE/pace.min.js')

block header
  != app_stylesheets

block content
  div#app-container!= content
  //- blueimp-gallery snippet (optional)
  div#blueimp-gallery.blueimp-gallery.blueimp-gallery-controls
    div.slides
    h3.title
    p.description
    a.prev ‹
    a.next ›
    a.close ×
    a.play-pause
    ol.indicator

block scripts
  script(type="text/javascript", src="//maps.google.com/maps/api/js?key=AIzaSyASaYjvSCdjsKwyVItAYN3S5DmKZVzPwTU&libraries=visualization,drawing")
  script(type="text/javascript", src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.48.0/mapbox-gl.js')
  
   
    



  != app_scripts

block stylesheets
  link(rel='stylesheet', href='/bower_components/codemirror/theme/ambiance.css')
  link(rel='stylesheet', href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.48.0/mapbox-gl.css')
